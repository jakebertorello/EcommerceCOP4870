<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.eCommerce.Views.ShoppingManagementView"
             Title="ShoppingManagementView">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="10*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <ListView Grid.Row="0"
                ItemsSource="{Binding Inventory}"
                SelectedItem="{Binding SelectedItem}"
                >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Text="{Binding Model.Id}"/>
                        <Label Grid.Column="1" Text="{Binding Model.Product.Name}"/>
                        <Label Grid.Column="2" Text="x"/>
                        <Label Grid.Column="3" Text="{Binding Model.Price}"/>
                        <Button Grid.Column="4" Text="+" Command="{Binding AddCommand}" Clicked="InLineAddClicked"/>
                    </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
            </ListView>
            <Button Grid.Row="1" Text="Add to Cart" Clicked="AddToCartClicked"/>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="10*"/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <ListView Grid.Row="0"
                ItemsSource="{Binding ShoppingCart}"
                SelectedItem="{Binding SelectedCartItem}"
                >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Label Text="{Binding Model.Display}"/> 
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
            </ListView>
            <Button Grid.Row="1" Text="-" Clicked ="RemoveFromCartClicked" FontSize = "40"/>
            <Button Grid.Row="2" Text="Checkout" Clicked = "CheckoutClicked"/>
        </Grid>
    </Grid>
</ContentPage>